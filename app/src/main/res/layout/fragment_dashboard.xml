<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:background="@drawable/linear_layout_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header Section -->
    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="07 Jan, 2025 | 11:55 PM"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <!-- Route Selection Section -->
    <AutoCompleteTextView
        android:id="@+id/et_select_route"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select or enter route"
        android:drawableStart="@drawable/rounded_edit_text"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edit_text" />


        <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/rb_by_fare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Starting Stop"
            android:buttonTint="#008000" />

        <RadioButton
            android:id="@+id/rb_by_ending_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ending Stop"
            android:buttonTint="#008000" />
    </RadioGroup>

    <!-- Destination Section -->
    <AutoCompleteTextView
        android:id="@+id/et_ending_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter ending stop"
        android:visibility="gone"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@drawable/rounded_edit_text" />

    <!-- Ticket Selection Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Tickets"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btn_decrease_full"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:id="@+id/tv_full_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_marginHorizontal="16dp" />

        <Button
            android:id="@+id/btn_increase_full"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="+" />
    </LinearLayout>

    <!-- Payment Options -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay Using"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/spinner_payment_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/payment_methods"
        android:layout_marginTop="8dp" />

    <!-- Pay Button -->
    <Button
        android:id="@+id/btn_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:backgroundTint="#008000"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:enabled="false" />
</LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
